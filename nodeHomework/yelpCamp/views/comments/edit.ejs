<% include ../partials/header %>

<div class="container">
    <div style="text-align:center">
        <h1>Edit comment</h1>
    </div>

    <div class="new-campground">
        <form action="/campgrounds/<%= campground._id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="Comment" value="<%= comment.text %>">
            </div>
            <button class="btn btn-lg btn-primary btn-block">Save</button>
        </form>

        <a href="/campgrounds/<%= campground._id %>">Back</a>
    </div>
</div>

<% include ../partials/footer %>