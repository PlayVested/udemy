<% include partials/header %>

<div class="container">
    <div style="text-align:center">
        <h1>Create a new campground</h1>
    </div>

    <div class="new-campground">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="Campground name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="Image URL">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" placeholder="Description">
            </div>
            <button class="btn btn-lg btn-primary btn-block">Create</button>
        </form>

        <a href="/campgrounds">Back</a>
    </div>
</div>

<% include partials/footer %>