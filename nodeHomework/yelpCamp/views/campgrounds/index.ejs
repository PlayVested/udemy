<% include ../partials/header %>

<div class="container">
    <p></p>
    <header class="jumbotron">
        <div class="container">
        <h1>Welcome to my homework camp</h1>
        <p>Look at tents while I learn to make complex web pages!</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
        </p>
        </div>
    </header>

    <div class="row">
        <div class="col-lg-12">
            Our most popular sites!
        </div>
        <div class="col-md-4">
            <div class="img-thumbnail">
                <img src="http://www.wildnatureimages.com/images%203/060731-372..jpg" alt="Lights" style="width:100%">
                <caption>List of users</caption>
            </div>
        </div>
    </div>

    <div class="row text-center">
    <% campgrounds.forEach((campground) => { %>
        <div class="col-md-3 col-sm-6">
            <img class="img-thumbnail" src="<%= campground.image %>">
            <caption><%= campground.name %></caption>
            <p>
                <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
            </p>
        </div>
    <% }); %>
    </div>
</div>

<% include ../partials/footer %>
